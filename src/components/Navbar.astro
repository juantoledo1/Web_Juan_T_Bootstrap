---
import 'bootstrap/dist/css/bootstrap.min.css';
import '../styles/retro.css';

---
<nav class="navbar navbar-expand-lg navbar-dark bg-dark border border-1 fixed-top navbar-scrolled retro-navbar">
    <div class="container-fluid px-3">
      <a class="navbar-brand text-truncate" href="#">
        <img src="/logoNuevo.png" alt="Logo" width="30" height="30" class="d-inline-block align-top me-2">
        BETELGEUSE
      </a>
      <button class="navbar-toggler border border-2 border-danger" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarSupportedContent">
        <ul class="navbar-nav ms-auto">
          <li class="nav-item">
            <a class="nav-link" href="#hero">Inicio</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="#servicios">Servicios</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="#cultura">Cultura</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="#tech">Tech</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="#contacto">Contacto</a>
          </li>
        </ul>
      </div>
    </div>
  </nav>

  // este script activa al menu desplegable en el navbar  para celulares
  <script>
    // Esperar a que Bootstrap esté cargado
    document.addEventListener('DOMContentLoaded', function() {
      const navbarCollapse = document.querySelector('#navbarSupportedContent');
      const navLinks = document.querySelectorAll('.nav-link');
      
      // Cerrar el menú al hacer clic en un enlace de navegación
      navLinks.forEach(link => {
        link.addEventListener('click', () => {
          // Usar el método de Bootstrap para ocultar el menú
          const bsCollapse = bootstrap.Collapse.getInstance(navbarCollapse);
          if (bsCollapse) {
            bsCollapse.hide();
          } else {
            // Si no está inicializado, simplemente remover la clase show
            navbarCollapse.classList.remove('show');
          }
        });
      });
      
      // Cerrar el menú cuando se hace clic fuera del navbar
      document.addEventListener('click', (event) => {
        const navbar = document.querySelector('.navbar');
        const navbarToggler = document.querySelector('.navbar-toggler');
        
        // Verificar si el clic fue fuera del navbar y el menú está abierto
        if (!navbar.contains(event.target) && !navbarToggler.contains(event.target) && navbarCollapse.classList.contains('show')) {
          // Usar el método de Bootstrap para ocultar el menú
          const bsCollapse = bootstrap.Collapse.getInstance(navbarCollapse);
          if (bsCollapse) {
            bsCollapse.hide();
          } else {
            // Si no está inicializado, simplemente remover la clase show
            navbarCollapse.classList.remove('show');
          }
        }
      });
    });
    </script>
  
  <style>
    /* Ajustes para navbar en dispositivos móviles */
    @media (max-width: 991.98px) {
      .navbar {
        padding: 0.5rem 0.75rem;
      }
      
      .navbar-brand {
        font-size: 0.9rem;
        max-width: calc(100% - 80px); /* Deja espacio para el botón de hamburguesa */
      }
      
      .navbar-collapse {
        background: rgba(0, 0, 0, 0.9);
        backdrop-filter: blur(10px);
        border-radius: 0.5rem;
        margin-top: 0.5rem;
      }
      
      .navbar-nav {
        gap: 0.5rem;
      }
      
      .nav-link {
        padding: 0.75rem 1rem !important;
      }
    }
    
    /* En pantallas muy pequeñas */
    @media (max-width: 575.98px) {
      .navbar-brand {
        font-size: 0.8rem;
        max-width: calc(100% - 70px);
      }
      
      .navbar-brand img {
        width: 25px;
        height: 25px;
      }
    }
  </style>