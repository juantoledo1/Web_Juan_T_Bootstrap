---
import 'bootstrap/dist/css/bootstrap.min.css';
import '../styles/retro.css';
---

<section id="hero" class="hero-section d-flex align-items-center justify-content-center text-center" style="background: linear-gradient(135deg, #1a1a2e, #16213e, #0f3460); min-height: 100vh; position: relative; overflow: hidden;">
  <!-- Fondo con estética retro -->
  <div class="retro-grid"></div>
  
  <div class="container position-relative">
    <div class="row justify-content-center">
      <div class="col-lg-10 text-center">
        <h1 class="hero-title display-3 fw-bold text-white mb-4" data-aos="fade-up">
          Renová tu estilo con diversión
        </h1>
        <p class="hero-subtitle lead text-light mb-5" data-aos="fade-up" data-aos-delay="200">
          Cortes con onda , videojuegos retros, películas , música y buena vibra en Posadas.
        </p>
        <p class="microcopy text-muted mb-4" data-aos="fade-up" data-aos-delay="300">
          Tu estilo se juega acá.
        </p>
        <div class="hero-buttons d-flex flex-wrap justify-content-center gap-3" data-aos="fade-up" data-aos-delay="400">
          <a href="https://wa.me/5493764674458" class="btn btn-success btn-lg px-4 py-3 fs-5 btn-retro d-flex align-items-center" target="_blank">
            <i class="bi bi-whatsapp me-2"></i> Reservar turno
          </a>
          <a href="https://maps.app.goo.gl/ZzP7wVWi3McqFYM79" class="btn btn-outline-light btn-lg px-4 py-3 fs-5 btn-retro d-flex align-items-center" target="_blank">
            <i class="bi bi-geo-alt me-2"></i> Ubicación en Google Maps
          </a>
        </div>
      </div>
    </div>
  </div>
  
  <!-- Elementos decorativos retro -->
  <div class="retro-corners">
    <div class="corner-tl"></div>
    <div class="corner-tr"></div>
    <div class="corner-bl"></div>
    <div class="corner-br"></div>
  </div>
</section>

<style>
.hero-section {
  position: relative;
  overflow: hidden;
}

.retro-grid {
  position: absolute;
  top: 0; 
  left: 0;
  width: 100%;
  height: 100%;
  background: 
    linear-gradient(rgba(26, 26, 46, 0.1) 1px, transparent 1px),
    linear-gradient(90deg, rgba(26, 26, 46, 0.1) 1px, transparent 1px);
  background-size: 20px 20px;
  z-index: -1; /* Cambiado de 1 a -1 para que esté detrás de todo */
  pointer-events: none; /* Esto permite hacer clic a través del grid */
}

.retro-corners {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  pointer-events: none;
  z-index: 0; /* Ajustado para que no interfiera con el contenido */
}

.corner-tl, .corner-tr, .corner-bl, .corner-br {
  position: absolute;
  width: 40px;
  height: 40px;
  border: 2px solid rgba(255, 255, 255, 0.2);
}

.corner-tl {
  top: 20px;
  left: 20px;
  border-right: none;
  border-bottom: none;
}

.corner-tr {
  top: 20px;
  right: 20px;
  border-left: none;
  border-bottom: none;
}

.corner-bl {
  bottom: 20px;
  left: 20px;
  border-right: none;
  border-top: none;
}

.corner-br {
  bottom: 20px;
  right: 20px;
  border-left: none;
  border-top: none;
}

.hero-title {
  text-shadow: 0 0 10px rgba(255, 255, 255, 0.3);
  text-align: center;
}

.hero-subtitle {
  max-width: 700px;
  margin: 0 auto 1.5rem;
}

.microcopy {
  font-style: italic;
  font-size: 1.2rem;
  text-align: center;
}

.hero-buttons .btn {
  border-radius: 8px;
  min-width: 250px;
  flex: 0 0 auto;
  display: inline-flex;
  align-items: center;
  justify-content: center;
  transition: all 0.3s ease;
}

.btn-success {
  background-color: #28a745;
  border-color: #28a745;
  transition: all 0.3s ease;
  box-shadow: 0 4px 8px rgba(40, 167, 69, 0.3);
}

.btn-success:hover {
  background-color: #218838;
  border-color: #1e7e34;
  transform: translateY(-2px);
  box-shadow: 0 6px 12px rgba(40, 167, 69, 0.4);
}

.btn-outline-light {
  border-width: 2px;
  transition: all 0.3s ease;
  color: #fff;
  border-color: rgba(255, 255, 255, 0.5);
}

.btn-outline-light:hover {
  background-color: rgba(255, 255, 255, 0.1);
  color: #fff;
  transform: translateY(-2px);
  box-shadow: 0 6px 12px rgba(255, 255, 255, 0.3);
}

/* Estilos responsivos */
@media (max-width: 768px) {
  .hero-title {
    font-size: 2.5rem;
  }
  
  .hero-subtitle {
    font-size: 1.2rem;
  }
  
  .hero-buttons .btn {
    min-width: 160px;
    margin-bottom: 10px;
    flex: 0 0 auto;
  }
}

@media (max-width: 576px) {
  .hero-title {
    font-size: 2rem;
  }
  
  .hero-buttons .btn {
    width: 100%;
    max-width: 300px;
  }
}
</style>